<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="by.javastudy.hibernate.dao.ContactHobbyDetailEntity" table="contact_hobby_detail"
           schema="hibernatedb">
        <composite-id mapped="true" class="by.javastudy.hibernate.dao.ContactHobbyDetailEntityPK">
            <key-property name="contactId">
                <column name="contact_id" sql-type="int(11)"/>
            </key-property>
            <key-property name="hobbyId">
                <column name="hobby_id" sql-type="varchar(20)" length="20"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>